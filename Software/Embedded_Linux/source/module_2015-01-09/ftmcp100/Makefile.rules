CONFIG_MULTI_FORMAT_DECODER=yes
CONFIG_FTMCP100_CORE=EMBEDDED
#CONFIG_FTMCP100_CORE=HOST
#CONFIG_FTMCP100_CORE=SEQ
SUPPORT_VG_IOCTL=VG
#SUPPORT_VG_IOCTL=IOCTL
SUPPORT_FMPEG4=yes
SUPPORT_JPEG=yes
CONFIG_REF_POOL_MANAGEMENT=yes
SHARED_BUFFER_POOL=no
MPEG4_CUSTOMER_QUANT_TABLE_SUPPORT = yes
ENABLE_CALCULATE_CHECK_SUM = yes
SUPPORT_ROTATION=yes

ifeq ($(CONFIG_PLATFORM_GM8210),y)
EXTRA_CFLAGS+=-DGM8210
endif

ifeq ($(CONFIG_FTMCP100_CORE),HOST)
EXTRA_CFLAGS+=-DONE_P_EXT
endif

ifeq ($(CONFIG_FTMCP100_CORE),EMBEDDED)
EXTRA_CFLAGS+=-DTWO_P_EXT
endif

ifeq ($(CONFIG_FTMCP100_CORE),SEQ)
EXTRA_CFLAGS+=-DTWO_P_EXT -DSEQ
ifeq ($(SUPPORT_VG_422T), YES)
EXTRA_CFLAGS+=-DSUPPORT_VG_422T
endif
ifeq ($(SUPPORT_VG_422P),YES)
EXTRA_CFLAGS+=-DSUPPORT_VG_422P
endif
endif

ifeq ($(SUPPORT_VG_IOCTL),VG)
EXTRA_CFLAGS+=-I$(SDK_MODULE_SRC)/include/videograph.include/log -I$(SDK_MODULE_SRC)/include/videograph.include/em
EXTRA_CFLAGS+=-DSUPPORT_VG
endif

ifeq ($(CONFIG_MULTI_FORMAT_DECODER),yes)
EXTRA_CFLAGS+=-DMULTI_FORMAT_DECODER -I$(SDK_MODULE_SRC)/decoder
endif

EXTRA_CFLAGS+=-DDMAWRP
EXTRA_CFLAGS+=-I$(SDK_MODULE_SRC)/include/frammap -I$(SDK_MODULE_SRC)/include/ftmcp100
#EXTRA_CFLAGS+=-DFPGA8210 -DLINUX
EXTRA_CFLAGS+=-DLINUX
EXTRA_CFLAGS+=-DHANDLE_BS_CACHEABLE

ifeq ($(CONFIG_REF_POOL_MANAGEMENT),yes)
ifeq ($(SHARED_BUFFER_POOL),yes)
EXTRA_CFLAGS+=-DSHARED_POOL
endif
EXTRA_CFLAGS+=-DREF_POOL_MANAGEMENT
EXTRA_CFLAGS+=-DMPEG4_COMMON_PRED_BUFFER
endif

ifeq ($(ENABLE_CALCULATE_CHECK_SUM),yes)
EXTRA_CFLAGS+=-DENABLE_CHECKSUM
endif

ifeq ($(SUPPORT_ROTATION),yes)
EXTRA_CFLAGS+=-DENABLE_ROTATION
endif

ifeq ($(CONFIG_PLATFORM_GM8210),y)
EXTRA_CFLAGS+=-DGM8210
endif

ifeq ($(CONFIG_PLATFORM_GM8287),y)
EXTRA_CFLAGS+=-DGM8287
endif

ifeq ($(CONFIG_PLATFORM_GM8139),y)
EXTRA_CFLAGS+=-DGM8139
EXTRA_CFLAGS+=-DENABLE_SWITCH_CLOCK
EXTRA_CFLAGS+=-DSUPPORT_PWM
endif

ifeq ($(CONFIG_PLATFORM_GM8136),y)
EXTRA_CFLAGS+=-DGM8136
EXTRA_CFLAGS+=-DENABLE_SWITCH_CLOCK
EXTRA_CFLAGS+=-DSUPPORT_PWM
endif

